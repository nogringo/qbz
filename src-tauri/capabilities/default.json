{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "clipboard-manager:default",
    "clipboard-manager:allow-write-text",
    "fs:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$CACHE/**" },
        { "path": "$CONFIG/**" },
        { "path": "/**" }
      ]
    }
  ]
}
